source 'https://rubygems.org'


gem 'rails', '3.2.8'
gem "jquery-rails"
gem 'mysql2'



group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
  gem "ejs", '1.1.1', :require => "ejs" # is a ruby port of underscore templates. Think of it like ERB for javascript. 
end

group :development do
  gem "wirble"
  gem "awesome_print"
end


gem 'jquery-rails'
gem 'jasminerice'
gem 'resque', :require => "resque/server"
gem 'execjs'
gem 'therubyracer'
gem 'backbone-on-rails'


gem 'passenger'
gem 'foodie',              :git => 'https://github.com/psahni/foodie.git'
gem 'custom_seed',         :git => 'https://github.com/psahni/custom_seed.git'
gem 'url_field_formatter', :git => 'https://github.com/psahni/url_field_formatter.git'


gem 'cache_digests'


